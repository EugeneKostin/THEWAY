					</label>
				</div> -->
			</div>
			<div id="map" class="map"></div>
			<div class="footer-total">
				<div class="footer-total__checkout">
					<div class="footer-total__price-wrapper">
						<div class="footer-total__cart-total-label">Стоимость</div>
						<div class="footer-total__cart-total">
							<span class="footer-total__cart-total-value"><%= cart_total %></span>
							<span class="currency">&#8381;</span>
						</div>
					</div>
					<div class="footer-total__price-wrapper">
						<div class="footer-total__delivery-label">Доставка</div>
						<div class="footer-total__delivery">
							<span class="footer-total__delivery-value"><%= delivery_price %></span>
							<span class="currency">&#8381;</span>
						</div>
					</div>
				</div>
				<div class="footer-total__price-wrapper">
					<div class="footer-total__price-label">Итого</div>
					<div class="footer-total__price">
                        <span class="footer-total__price-value"><%= cart_total + delivery_price %></span>
                        <span class="currency">&#8381;</span>
                    </div>
				</div>
				<button type="submit" class="checkout__submit">Оплатить</button>
			</div>
		</form>
	</main>
		<%- include('../partials/script'); %>
	</body>
</html>
