			<div class="checkout__row">
				<div class="checkout__col">
					<label for="address">Адрес доставки</label>
					<input type="text" id="address" name="Адрес" required>
				</div>
			</div>
			<div class="checkout__row">
				<div class="checkout__col-4">
					<label for="address_det_1">Подъезд</label>
					<input type="text" id="address_det_1" name="Подъезд" maxlength="2">
				</div>
				<div class="checkout__col-4">
					<label for="address_det_2">Домофон</label>
					<input type="text" id="address_det_2" name="Домофон" maxlength="4">
				</div>
				<div class="checkout__col-4">
					<label for="address_det_3">Кв/офис</label>
					<input type="text" id="address_det_3" name="Кв.офис" maxlength="5" required>
				</div>
				<div class="checkout__col-4">
					<label for="address_det_4">Этаж</label>
					<input type="text" id="address_det_4" name="Этаж" maxlength="3">
				</div>
			</div>
			<div class="checkout__row">
				<div class="checkout__col">
					<label for="phone">Номер телефона</label>
					<input type="text" value="+7" id="phone" name="Телефон" maxlength="20" required>
				</div>
			</div>
			<div class="checkout__row">
				<div class="checkout__col">
					<label for="comment">Комментарий</label>
					<input type="text" id="comment" name="Комментарий" maxlength="30">
				</div>
			</div>
			<div class="checkout__payment">
				<div class="checkout__title">Способ оплаты</div>
				<div class="selector">
						<label><input type="radio" id="cash" value="Наличными" name="Оплата" checked><span>Наличными</span></label>
						<label><input type="radio" id="card" value="Картой" name="Оплата"><span>Картой</span></label>
						<div class="selector__slider"></div>
				</div>
